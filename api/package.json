{
  "name": "current-time",
  "version": "1.0.0",
  "description": "A simple API that returns the current time in JSON",
  "scripts": {
    "start": "node ./dist/server",
    "start:dev": "nodemon ./dist/server | bunyan",
    "start:debug": "nodemon --inspect ./dist/server | bunyan",
    "watch:tsc": "rm -rf ./dist && tsc --watch -p ./tsconfig.json",
    "build:tsc": "rm -rf ./dist && tsc -p ./tsconfig.json",
    "test": "rm -f logs.json && NODE_ENV=test jest --runInBand --forceExit --verbose"
  },
  "author": "victorikuomola.k@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bunyan": "^1.8.12",
    "cors": "^2.8.5",
    "date-fns-timezone": "^0.1.4",
    "dotenv": "^6.2.0",
    "express": "^4.18.2",
    "express-request-id": "^1.4.1",
    "helmet": "^3.18.0",
    "http-status-codes": "^1.3.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.3.2",
    "joi": "^14.3.0",
    "lodash": "^4.17.13",
    "module-alias": "^2.1.0",
    "prom-client": "^14.2.0",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "ts-node": "^10.9.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.5",
    "@types/bluebird": "^3.5.25",
    "@types/bunyan": "^1.8.5",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/joi": "^14.0.1",
    "@types/lodash": "^4.14.197",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.5.7",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^9.0.2",
    "jest": "^29.6.4",
    "jest-extended": "^4.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^3.4.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@app": "./dist"
  }
